  "version": "0.2.0",
  "configurations": [


    {
      "type": "pwa-node",
      "request": "launch",
      "name": "E2E fuzzer",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/test/fuzzing/endtoend/EndToEndFuzzing.ts",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    },

    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Mocha testi",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "yarn harhat test test/airdrop/testUtils.ts",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Create Airdrop Transactions",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["ts-node", "-r", "dotenv/config", "airdrop/flare/createAirdropTransactions.ts",
        "--snapshot-file", "airdrop/data/export.csv", 
        "--transaction-file", "airdrop/files/trans/unsigned_call_transactions.json",
        "--override", 
        "-h", "true",
        "-i", "19",
        "--deployment-name", "deployment/deploys/staging.json"
      ]
   },
  ]
}